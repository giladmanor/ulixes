<ul class="list-group">
	<%
	i=0
	@data.compact.each{|lcl|

	%>
	<li class="list-group-item">
		<button type="button" class="btn btn-default btn-primary btn-xs pull-right" onclick="cnt.removeLanguage($('#notificationForm'),<%=i%>);return false;"><span class="glyphicon glyphicon-remove-circle"></span> Delete</button>
		Language: <span class="label label-primary"><%= @account.languages.find_by_code(lcl["lang"]).name%></span>
		<input type="hidden" name="data[]lang" value="<%= lcl["lang"]%>"/>
		<div class="form-group">
			<label for="name">Title</label>
			<input name="data[]title" class="form-control" value="<%= lcl["title"]%>">
		</div>
		<div class="form-group">
			<label for="name">Message</label>
			<textarea name="data[]message" class="form-control ckeditor" rows="3"><%= lcl["message"]%></textarea>
		</div>
		<div class="form-group">
			<label for="name">Actions</label>
			<textarea name="data[]actions" class="form-control" name="editor1" rows="3"><%= lcl["actions"]%></textarea>
			<span class="help-block">[{:caption=>"Button Caption", :code=>"Code", :value=>"Numeric Value"}]</span>
		</div>
	</li>

	<%
	i+=1
	}

	%>

	<li class="list-group-item">
		<div class="input-group">
			<%= select_tag("language", options_for_select(@account.languages.map{|o| [o.name, o.code]},@account.conf["lang"]),class:"form-control") %>
			<div class="input-group-btn">
				<button type="button" class="btn btn-default btn-primary" onclick="cnt.messageContentForm($('#notificationForm'));return false;">Add a Language</button>
			</div>
		</div>
	</li>
</ul>

<script src="/ckeditor/ckeditor.js"></script>